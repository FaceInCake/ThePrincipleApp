<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="General">

        <SwitchPreference
            android:defaultValue="false"
            android:key="nightmode"
            android:title="Night mode" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="weekends"
            android:title="Show weekends" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="hideempty"
            android:title="Hide days with no events" />

    </PreferenceCategory>

    <PreferenceCategory app:title="School Information">

        <EditTextPreference
            android:key="schoolname"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="School name" />
        <EditTextPreference
            android:key="schooladdress"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="School address" />

    </PreferenceCategory>
    <PreferenceCategory android:title="Account">

        <SwitchPreference
            android:defaultValue="true"
            android:key="stayloggedin"
            android:title="Stay logged in" />
        <EditTextPreference
            android:key="editpass"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Change password" />
    </PreferenceCategory>

</PreferenceScreen>
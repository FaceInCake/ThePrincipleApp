<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewTask">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <com.example.theprincipleapp.InfoSection
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/taskName"
        app:sectionIcon="@drawable/ic_baseline_edit_24"
        app:sectionName="Name"
        app:sectionValue="@string/app_name"/>

    <com.example.theprincipleapp.InfoSection
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/taskDesc"
        app:sectionIcon="@drawable/ic_baseline_format_list_numbered_24"
        app:sectionName="Description"
        app:sectionValue="@string/app_name"/>

    <com.example.theprincipleapp.InfoSection
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/taskType"
        app:sectionIcon="@drawable/ic_baseline_text_fields_24"
        app:sectionName="Type"
        app:sectionValue="@string/app_name"/>

    <com.example.theprincipleapp.InfoSection
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/taskOpen"
        app:sectionIcon="@drawable/ic_baseline_calendar_today_24"
        app:sectionName="Open Date"
        app:sectionValue="@string/app_name"/>

    <com.example.theprincipleapp.InfoSection
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/taskClose"
        app:sectionIcon="@drawable/ic_baseline_alarm_24"
        app:sectionName="Close Date"
        app:sectionValue="@string/app_name"/>

    <com.example.theprincipleapp.InfoSection
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/taskLocal"
        app:sectionIcon="@drawable/ic_outline_meeting_room_24"
        app:sectionName="Location"
        app:sectionValue="@string/app_name"/>

    <com.example.theprincipleapp.InfoSection
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/taskGrade"
        app:sectionIcon="@drawable/ic_baseline_123_24"
        app:sectionName="Grade"
        app:sectionValue="@string/app_name"/>

    </LinearLayout>
</ScrollView>